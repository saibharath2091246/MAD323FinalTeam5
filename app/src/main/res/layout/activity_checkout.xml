<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".customer.CheckoutActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image1"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/seeshop_logo"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/address_layout"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delivery Address"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                />

            <!--address-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_20dp"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/app_color"

                    android:layout_marginLeft="@dimen/_30dp"
                    android:text="Address"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:background="@drawable/textfield_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    >

                    <EditText
                        android:id="@+id/address_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"

                        android:inputType="text"
                        android:padding="@dimen/_10dp"

                        android:textColorHint="#BFBFBF" />

                </LinearLayout>
            </LinearLayout>

            <!--city-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_20dp"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/app_color"

                    android:layout_marginLeft="@dimen/_30dp"
                    android:text="City"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:background="@drawable/textfield_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    >

                    <EditText
                        android:id="@+id/city_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"

                        android:inputType="text"
                        android:padding="@dimen/_10dp"

                        android:textColorHint="#BFBFBF" />

                </LinearLayout>
            </LinearLayout>

            <!--Postal code-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_20dp"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/app_color"

                    android:layout_marginLeft="@dimen/_30dp"
                    android:text="Postal Code"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:background="@drawable/textfield_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    >

                    <EditText
                        android:id="@+id/postal_code_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"

                        android:inputType="number"
                        android:padding="@dimen/_10dp"

                        android:textColorHint="#BFBFBF" />

                </LinearLayout>
            </LinearLayout>

            <!--Postal code-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_20dp"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/app_color"

                    android:layout_marginLeft="@dimen/_30dp"
                    android:text="Phone"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:background="@drawable/textfield_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    >
                    <EditText
                        android:id="@+id/phone_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="number"
                        android:padding="@dimen/_10dp"
                        android:textColorHint="#BFBFBF" />

                </LinearLayout>
            </LinearLayout>
            <!--phone ends-->


        </LinearLayout><!--/address-->

        <!--cashon delivert/debit-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_10dp"
            >
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cc_rg"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10dp"
                >

                <RadioButton
                    android:id="@+id/debit_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit/Debit Card"
                    android:checked="true"
                    />
                <RadioButton
                    android:id="@+id/cod_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cash On Delivery"
                    />
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/debit_card_layout"
                android:background="@drawable/textfield_bg"

                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_20dp"
                android:orientation="vertical">


                <!--card-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_20dp"

                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/_16sp"
                        android:layout_gravity="center"
                        android:textColor="@color/app_color"

                        android:layout_marginLeft="@dimen/_30dp"
                        android:text="Card"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_30dp"
                        android:layout_marginLeft="@dimen/_10dp"
                        android:background="@drawable/textfield_bg"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_weight="1.5"
                        >

                        <EditText
                            android:id="@+id/card_et"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@android:color/transparent"

                            android:inputType="number"
                            android:padding="@dimen/_10dp"

                            android:textColorHint="#BFBFBF" />

                    </LinearLayout>
                </LinearLayout>

                <!--exp/cvv-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginBottom="@dimen/_10dp"
                    >
                    <!--exp-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_20dp"

                        >

                        <TextView
                            android:id="@+id/exptitle_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16sp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/app_color"

                            android:layout_marginLeft="@dimen/_30dp"
                            android:text="Exp"/>
                        <LinearLayout
                            android:layout_toRightOf="@+id/exptitle_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:background="@drawable/textfield_bg"
                            android:layout_centerVertical="true"

                            >

                            <EditText
                                android:id="@+id/exp_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                android:inputType="number"
                                android:textColorHint="#BFBFBF" />

                        </LinearLayout>
                    </RelativeLayout>

                    <!--cvv-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_20dp"

                        >

                        <TextView
                            android:id="@+id/cvvtitle_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_16sp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/app_color"

                            android:layout_marginLeft="@dimen/_30dp"
                            android:text="CVV"/>
                        <LinearLayout
                            android:layout_toRightOf="@+id/cvvtitle_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10dp"
                            android:layout_marginRight="@dimen/_10dp"
                            android:background="@drawable/textfield_bg"
                            android:layout_centerVertical="true"

                            >

                            <EditText
                                android:id="@+id/cvv_et"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"

                                android:inputType="number"

                                android:textColorHint="#BFBFBF" />

                        </LinearLayout>
                    </RelativeLayout>



                </LinearLayout>
                <!--/exp/cvv-->
            </LinearLayout>




        </LinearLayout><!--debit card /cod-->


        <Button
            android:id="@+id/placeorder_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Place Order"
            android:onClick="placeOrder"
            android:background="@drawable/solid_bg_app_color_round_corner"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            />
    </LinearLayout>
</ScrollView>