<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customer.OrderPlacedActivity">
    <ImageView
        android:id="@+id/image1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/seeshop_logo"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_20dp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/thnk_u"

        android:layout_marginTop="@dimen/_20dp"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Home"
        android:onClick="home"
        android:background="@drawable/solid_bg_app_color_round_corner"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />

    <Button
        android:id="@+id/placeorder_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="My Orders"
        android:onClick="myOrders"
        android:background="@drawable/solid_bg_app_color_round_corner"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        />
</LinearLayout>