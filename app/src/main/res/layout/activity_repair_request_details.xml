<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".customer.RepairRequestDetailsActivity">
    <TextView
        android:id="@+id/welcome_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Repair Request Details"
        android:textSize="@dimen/_30sp"
        android:textAlignment="center"
        android:textColor="@color/app_color"
        android:layout_marginTop="@dimen/_10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_20dp"

            >

            <TextView
                android:id="@+id/title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/app_color"

                android:layout_marginLeft="@dimen/_30dp"
                android:text="Subject"/>

            <TextView
                android:id="@+id/order_id_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="11sp"
                android:layout_gravity="center"
                android:textColor="@color/app_color"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_30dp"
                android:text="Subject"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="@dimen/_10dp"

            />

        <!--pp-->
        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sp"
            android:layout_gravity="center"
            android:textColor="@color/app_color"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10dp"
            android:text="Price"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sp"
            android:layout_gravity="center"
            android:textColor="@color/app_color"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10dp"
            android:text="Subject"/>  <TextView
        android:id="@+id/subject_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10dp"
        android:text="Subject"/>

        <!--des-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_16sp"
            android:layout_gravity="center"
            android:textColor="@color/app_color"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10dp"
            android:text="Description"/>  <TextView
        android:id="@+id/description_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10dp"
        android:text="sdsd dfd"/>

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:textColor="@color/app_color"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10dp"
            android:text="Status : In Progress"/>


        <LinearLayout
            android:id="@+id/status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="@dimen/_20dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status_check_tv"

                android:textAlignment="center"
                android:textSize="@dimen/_16sp"
                android:textColor="@color/app_color"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_10dp"
                />
            <Button
                android:id="@+id/update_status_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Update Status"
                android:padding="@dimen/_10dp"
                android:onClick="updateStatus"
                android:background="@drawable/solid_bg_app_color_round_corner"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>