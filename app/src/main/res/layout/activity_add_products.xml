<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".seller.AddProductsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"

            >

            <!--name-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_20dp"

                >

                <TextView
                    android:id="@+id/title_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/app_color"

                    android:layout_marginLeft="@dimen/_30dp"
                    android:text="Title"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:background="@drawable/textfield_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    >

                    <EditText
                        android:id="@+id/title_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"

                        android:inputType="text"
                        android:padding="@dimen/_10dp"

                        android:textColorHint="#BFBFBF" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_20dp"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/app_color"

                    android:layout_marginLeft="@dimen/_30dp"
                    android:text="Price"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:background="@drawable/textfield_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    >

                    <EditText
                        android:id="@+id/price_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"

                        android:inputType="number"
                        android:padding="@dimen/_10dp"

                        android:textColorHint="#BFBFBF" />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_20dp"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/app_color"

                    android:layout_marginLeft="@dimen/_30dp"
                    android:text="Quantity"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:background="@drawable/textfield_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    >

                    <EditText
                        android:id="@+id/quantity_et"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"

                        android:inputType="number"
                        android:padding="@dimen/_10dp"

                        android:textColorHint="#BFBFBF" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_20dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/app_color"

                    android:layout_marginLeft="@dimen/_30dp"
                    android:text="Description"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30dp"
                    android:background="@drawable/textfield_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    android:layout_marginLeft="@dimen/_10dp"

                    >

                    <EditText
                        android:id="@+id/description_et"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:backgroundTint="@android:color/transparent"
                        android:inputType="textMultiLine"
                        android:padding="@dimen/_10dp"

                        android:textColorHint="#BFBFBF" />

                </LinearLayout>
            </LinearLayout>


            <!--spinner-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_20dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/app_color"

                    android:layout_marginLeft="@dimen/_30dp"
                    android:text="Brand"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30dp"
                    android:background="@drawable/textfield_bg"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    android:layout_marginLeft="@dimen/_10dp"

                    >

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/brand_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:padding="@dimen/_10dp"
                        android:pointerIcon="arrow"
                        android:spinnerMode="dropdown"
                        android:entries="@array/brand"
                        android:textColorHint="#BFBFBF" />

                </LinearLayout>
            </LinearLayout>


            <!--enable-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="@dimen/_20dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"
                    android:textColor="@color/app_color"

                    android:layout_marginLeft="@dimen/_30dp"
                    android:text="Enable/Disable"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_30dp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1.3"
                    android:layout_marginLeft="@dimen/_10dp"

                    >


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/enable_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:padding="@dimen/_10dp"
                        android:pointerIcon="arrow"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:spinnerMode="dropdown"
                        android:entries="@array/brand"
                        android:textColorHint="#BFBFBF" />

                </LinearLayout>
            </LinearLayout>


            <!--choose-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_30dp"
                    android:layout_weight="0.7"
                    android:text="Images"

                    android:textColor="@color/app_color"
                    android:textSize="@dimen/_16sp" />

                <LinearLayout
                    android:id="@+id/image_choose_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_30dp"
                    android:background="@drawable/textfield_bg"

                    android:orientation="vertical"

                    >

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/transparent"
                        android:padding="@dimen/_10dp"
                        android:text="Choose file"
                        android:textColor="@color/black" />


                </LinearLayout>
            </LinearLayout>
            <!--show images-->
            <TextView

                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose 2 images"
                android:textColor="@color/teal_200"
                android:layout_marginLeft="@dimen/_30dp"
                />
            <LinearLayout
                android:id="@+id/images_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_20dp"
                >

                <ImageView
                    android:id="@+id/image1_iv"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"

                    android:src="@drawable/seeshop_logo"
                    android:layout_marginLeft="@dimen/_30dp"
                    />

                <ImageView
                    android:id="@+id/image2_iv"

                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="0.7"
                    android:textSize="@dimen/_16sp"
                    android:layout_gravity="center"

                    android:src="@drawable/seeshop_logo"
                    android:layout_marginLeft="@dimen/_30dp"
                    />

            </LinearLayout>


            <Button
                android:id="@+id/add_btn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="Add"
                android:background="@drawable/solid_bg_app_color_round_corner"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                />





        </LinearLayout>





    </RelativeLayout>

</ScrollView>