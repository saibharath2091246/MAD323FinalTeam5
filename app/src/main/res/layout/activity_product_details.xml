                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="title"
                    android:textSize="@dimen/_18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    />


            </LinearLayout>

